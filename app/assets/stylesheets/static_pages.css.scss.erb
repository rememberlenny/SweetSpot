.full-screen-block{
  position: relative;
}

.how-to-list li{
  margin-top: 3em;
}

.block-text-wrapper {
  top: 25%;
  position: absolute;
  left: 0;
  right: 0;
}

.chrome-logo{
  position: absolute;
  top: 0px;
  left: -5px;
  display: block;
  background: url( asset_path('sweetspot_flag.png') );
  height: 80px;
  width: 301px;
  background-repeat: no-repeat;
  z-index: 100;
}

.post-path{
  .chrome-logo{
    display: none;
  }
}

.image-target{
  max-width: 100%;
}

.full-screen-block{
  height: 500px;
}
