.branding-icon{
  height: 30px;
  width: 77px;
  background: url( asset_path('swt.png'));
  background-repeat:no-repeat;
  margin: 10px;
  padding-bottom: 2px;
  box-sizing: content-box;
  &:hover{
    border-bottom: 1px solid rgb(0, 0, 0);
  }
}

nav.navbar{
  position: fixed;
  width: 100%;
  background: white;
  z-index: 100;
  transition: background 300ms;
  -webkit-transition: background 300ms;
}

.black-topnav{
  nav.navbar{
    background: rgba(0,0,0, .4);
  }
  .navbar-default .navbar-nav > li > a{
    color: white;
  }
}

.navbar-brand, .navbar-collapse{
  position: fixed;
  top: 0px;
}
.navbar-collapse{
  right: 0px;
}

.black-topnav{
  .branding-icon{
    background: url( asset_path('swt-white.png'));
    &:hover{
      border-bottom: 1px solid rgb(255, 255, 255);
    }
  }
}

a.navbar-brand {
  padding: 0px;
  font-size: 18px;
  line-height: 20px;
  height: 50px;
}
