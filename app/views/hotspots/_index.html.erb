<p id="notice"><%= notice %></p>

<h1>Listing Hotspots</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Films</th>
      <% if @story.user_id == current_user.id %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @hotspots.each do |hotspot| %>
      <% if !hotspot.nil? %>
        <tr>
          <td><%= hotspot.location %></td>
          <td><%= hotspot.destination %></td>
          <% if @story.user_id == current_user.id %>
          <td><%= link_to 'Destroy', [@story, @film, hotspot], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
